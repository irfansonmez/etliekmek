  <script>
    function myFunctionTwo () {
      $("#yeniKomutX").css("display", "block");
      $("#yeniAciklamaX").css("display", "block");
      $("#yeniTipX").css("display", "block");
    };
    
    function myFunctionXyz () {
      if (document.getElementById("tip").value === "embed") {
        $("#tip").css("width", "49%");
        $("#renk").css("display", "block");
      } else {
        $("#tip").css("width", "100%");
        $("#renk").css("display", "none");
      }
    };
    
    function myFunctionAbc () {
      if (document.getElementById("ytip").value === "embed") {
        $("#ytip").css("width", "49%");
        $("#yrenk").css("display", "block");
      } else {
        $("#ytip").css("width", "100%");
        $("#yrenk").css("display", "none");
      }
    };
  </script>
  
  <script>
      function formAutoSubmit () {
       var frm = document.getElementById("forum")
        frm.submit();
      }
    </script>
  
  <script>
      $(document).ready(function(){
        
        $("#genelAyarlarBtn").click(function() {
          $("#genelAyarlarBtn").addClass("activex");
          $("#genelAyarlar").css("display", "block");
          $("#ozelKomutlarBtn").removeClass("activex");
          $("#ozelKomutlar").css("display", "none");
          $("#modAyarlarBtn").removeClass("activex");
          $("#modAyarlar").css("display", "none");
        });
        
        $("#ozelKomutlarBtn").click(function() {
          $("#genelAyarlarBtn").removeClass("activex");
          $("#genelAyarlar").css("display", "none");
          $("#ozelKomutlarBtn").addClass("activex");
          $("#ozelKomutlar").css("display", "block");
          $("#modAyarlarBtn").removeClass("activex");
          $("#modAyarlar").css("display", "none");
        });
        
        $("#modAyarlarBtn").click(function() {
          $("#genelAyarlarBtn").removeClass("activex");
          $("#genelAyarlar").css("display", "none");
          $("#ozelKomutlarBtn").removeClass("activex");
          $("#ozelKomutlar").css("display", "none");
          $("#modAyarlarBtn").addClass("activex");
          $("#modAyarlar").css("display", "block");
        });
        
      });
  </script>
  
