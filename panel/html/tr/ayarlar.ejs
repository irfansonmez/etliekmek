<div class="container">
  <br>
  <div class="jumbotron" style="background-color:#0053ba;">
    <div align="center">
      <form method="POST" id="forum">
    
  <div id="genelAyarlar">
    
      <div class="row">
        <div class="col-25">
          <label for="prefix">Ön-Ek/Prefix</label>
        </div>
        <div class="col-75">
          <% if (bot.ayar.has(`prefix_${sunucu.id}`) === false) { %>
          <input type="text" style="text-align: left; width:87%;" name="prefix" id="prefix" maxlength="15" placeholder="<%=bot.ayarlar.prefix%>">
          <a href="/tr/panel/<%=sunucu.id%>/yonet/prefix/sifirla" class="reset-btn" role="button">Sıfırla</a>
          <% } %>
					<% if(bot.veritabanı.varMı(bot.ayar.has(`prefix_${sunucu.id}`) === true) { %>
					<input type="text" style="text-align: left; width:87%;" name="prefix" id="prefix" value="<%= bot.ayar.fetch(`prefix_${sunucu.id}`) %>" maxlength="15" placeholder="<%=bot.ayarlar.prefix%>">
          <a href="/tr/panel/<%=sunucu.id%>/yonet/prefix/sifirla" class="reset-btn" role="button">Sıfırla</a>
          <% } %>
        </div>
      </div>
    
    <div class="row">
        <div class="col-25">
          <label for="otorol">Otomatik Rol</label>
        </div>
        <div class="col-75">
          <% if (bot.veritabanı.varMı(`${sunucu.id}.otorol`) === false) { %>
          <select style="text-align: left; width:87%;" name="otorol" id="otorol">
            <option disabled selected>Lütfen bir rol seçiniz.</option>
            <% sunucu.roles.filter(r => r.name !== "@everyone").forEach(r => { %>
            <option value="<%=r.id%>" style="color:<%=r.hexColor%>"><%=r.name%></option>
            <% }); %>
          </select>
          <a href="/tr/panel/<%=sunucu.id%>/yonet/otorol/sifirla" class="reset-btn" role="button">Sıfırla</a>
          <% } %>
					<% if(bot.veritabanı.varMı(`${sunucu.id}.otorol`) === true) { %>
          <select style="color:<%=sunucu.roles.get(bot.veritabanı.veri(`${sunucu.id}.otorol`)).hexColor%>; text-align: left; width:87%;" name="otorol" id="otorol">
             <option disabled selected>Lütfen bir rol seçiniz.</option>
            <option value="<%=bot.veritabanı.veri(`${sunucu.id}.otorol`)%>" style="color:<%=sunucu.roles.get(bot.veritabanı.veri(`${sunucu.id}.otorol`)).hexColor%>" selected><%=sunucu.roles.get(bot.veritabanı.veri(`${sunucu.id}.otorol`)).name%></option>
					 <% sunucu.roles.filter(r => r.name !== "@everyone").filter(r => r.id !== bot.veritabanı.veri(`${sunucu.id}.otorol`)).forEach(r => { %>
            <option value="<%=r.id%>" style="color:<%=r.hexColor%>"><%=r.name%></option>
          <% }); %>
          </select>
          <a href="/tr/panel/<%=sunucu.id%>/yonet/otorol/sifirla" class="reset-btn" role="button">Sıfırla</a>
          <% } %>
        </div>
      </div>
    
     
        
        <button id="formbtn" class="save-btn" type="submit"><i class="fa fa-save fa-fw"></i> Değişiklikleri Kaydet</button>
        
      </form>
    </div>  
  </div>
