<meta name="viewport" content="width=device-width, initial-scale=1.0">

<%- include('başlık.ejs', {bot, user, path}) %>
<div class="container">

  
  <% const guild = sunucu %>
	<div class="row justify-content-md-center">
	<div align="center"><h2 style="color: #fff;"><i class="fa fa-wrench fa-fw" aria-hidden="true"></i> Genel Ayarlar</h2></div>
  </div>
	
  <!--<center><h7 style="color:red">Bakımda...</h7></center>-->
  
	<div class="row">
    
<div class="col">
    <div class="container">
      <form method="post">
        <ul class="list-group list-group-flush">
          
<div class="row">
            <div class="col-25">
              <label for="onek">Ön-Ek/Prefix</label>
            </div>
            <div class="col-75">
              
              <% if (bot.ayar.has(`prefix_${guild.id}`) === false) { %>
								<input type="text" style="text-align: left;" name="onek" id="onek"
									maxlength="15" placeholder="<%=bot.ayarlar.prefix%>">
              <% } %>
              
							<% if(bot.ayar.has(`prefix_${guild.id}`) === true) { %>
								<input type="text" style="text-align: left;" name="onek" id="onek" value="<%= bot.ayar.fetch(`prefix_${guild.id}`) %>"
									maxlength="15" placeholder="<%=bot.ayarlar.prefix%>">
              <% } %>
            </div>
</div>

<div class="row">
            <div class="col-25">
              <label for="susturrol">Susturma Rolü</label>
            </div>
            <div class="col-75">
              <select id="susturrol" name="susturrol"> 
           <%if(bot.ayar.has(`sRol_${guild.id}`) === false) {%>
                 <option value="" disabled selected>Rol seçiniz.</option>
                <%
                for (var i = 0; i < guild.roles.filter(r=> r.name!=='@everyone').size; i++){%>
              
                <option value="<%=guild.roles.filter(r=> r.name!=='@everyone').array()[i].name%>">@<%=guild.roles.filter(r=> r.name!=='@everyone').array()[i].name%></option>
              <%  } %>
           <%} else {%>
               <option value="<%=guild.roles.get(bot.ayar.fetch(`sRol_${guild.id}`)).name%>" selected>@<%=guild.roles.get(bot.ayar.fetch(`sRol_${guild.id}`)).name%></option>
             <%for (var i = 0; i < guild.roles.filter(c=>c.id!==bot.ayar.fetch(`sRol_${guild.id}`)).filter(c => c.name!=='@everyone').size; i++){%>
               
                <option value="<%=guild.roles.filter(c=>c.id!==bot.ayar.fetch(`sRol_${guild.id}`)).filter(c => c.name!=='@everyone').array()[i].name%>">#<%=guild.channels.filter(c=>c.id!==bot.ayar.fetch(`sRol_${guild.id}`)).filter(c => c.name!=='@everyone').array()[i].name%></option>
              <%  } %>
                <%}%>
              </select>
            </div>
          </div>
          
          </ul>
          <div style="width: 100%; text-align: right; margin-top: 15px;">
         <button style="background-color:blue; color:#fff" type="sumbit" id="formbtn" class="btn btn-default"><i class="fa fa-fw fa-save" aria-hidden="true"></i> Kaydet</button>
              <a href="yonet" button style="background-color:orange; color:#fff" type="sumbit" id="formbtn" class="btn btn-default"><i class="fa fa-mail-reply" aria-hidden="true"></i> Geri Dön</button> </a>    </div>
  
        </div>
      </form>
    </div>
  </div>
    
</div>


<script>
	var ts = parseInt($('#guildCreate').text());
	$('#guildCreate').html(`<strong>Created:</strong>: ${moment(ts).format('MMMM Do YYYY (h:mm a)')}`);  
</script>
<% include footer.ejs %>
